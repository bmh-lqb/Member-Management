<script>

  $("#form").on("click", "button[type='submit']", function (event) {
    // 阻止默认行为
    event.preventDefault();

    let params = $("#form").serialize();

    $.ajax({
      url: "/addUser",
      method: "POST",
      data: params,
      dataType: "JSON",
      success: function (res) {
        // 逻辑处理:
        let {
          status,
          msg
        } = res;

        if (status == 200) {
          // 重新渲染数据
          getAllUsers();

          alert(msg);
        } else {
          alert(msg);
        }
      }
    });
  });

  // 获取所有的用户数据
  function getAllUsers() {
    $.ajax({
      url: "/getAllUsers",
      method: "GET",
      dataType: "JSON",
      success: function (res) {
        // 解构 res 对象
        let {
          status
        } = res;

        if (status == 200) {
          // 重新渲染页面
          let html = template("tmp", res);
          $("#tbody").html(html);
          $("input").val("");
        } else {
          alert("出错了");
        }

      }
    });
  }

  // 给删除按钮绑定点击事件
  $("#tbody").on("click", ".btn-danger", function (event) {
    if (confirm("确认删除吗？")) {
      // 得到 id
      let id = $(this).attr("id");

      $.ajax({
        url: "/delUser?id=" + id,
        method: "GET",
        success: function (res) {
          let {
            status,
            msg
          } = res;

          if (status == 200) {
            alert(msg);

            // 更新数据
            getAllUsers();
          } else {
            alert("出错啦");
          }
        }
      });
    }
  });

  // 给编辑按钮绑定点击事件
  $('#tbody').on('click', '.btn-default', function (event) {
    event.preventDefault();

    // 得到 id
    let id = $(this).attr('id');

    // 根据 id 去服务器中获取数据
    $.ajax({
      url: 'getUserById',
      method: 'GET',
      data: 'id=' + id,
      success: function (res) {
        // 解构 res
        let {
          status,
          data
        } = res;

        // 判断
        if (status === 200) {
          // 将添加新用户区域改为修改用户
          let html = template('editUser', data);
          $('#form').html(html);
        }
      }
    });
  });

  // 通过事件委托给修改按钮绑定事件
  $('#form').on('click', '#editHandler', function (event) {
    // 阻止默认行
    event.preventDefault();

    // 获取表单数据
    let params = $('#form').serialize();

    // 将参数提交到服务器
    $.ajax({
      url: '/updateUser',
      type: 'POST',
      data: params,
      success: function (res) {
        let {
          status,
          msg
        } = res;

        if (status === 200) {
          alert(msg);

          // 重新渲染页面
          getAllUsers();

          // 重新渲染新增用户区域
          let html = template('addUser', {});
          $('#form').html(html);
        } else {
          alert('出错啦');
        }
      }
    });
  });

  // 给表头中的单选框绑定一个点击事件
  $('#selAll').on('click', function () {
    // 得到表头中单选框的选中状态
    // 在 jquery 中 checked selected disable 只能用 prop() 来获取
    let checked = $(this).prop('checked');

    // 将下方所有的单选框都设置为 checked 状态
    $('.boxitem').prop('checked', checked);

    // 如果 checked 状态为 true 应该将按钮显示出来，否则隐藏
    checked ? $('#delAll').css("visibility","visible") : $('#delAll').css("visibility","hidden");
    // checked ? $('#delAll').show() : $('#delAll').hide();
  });

  // 使用事件委托给多选框绑定事件
  $('#tbody').on('click', '.boxitem', function () {
    // 如果同时在两个多选框被选中，显示批量删除
    // 得到当前数据表格中所有选中的多选框
    let selCount = 0;

    $('.boxitem').each((key, ele) => {
      // ele： 是遍历中的每一个 dom 元素
      let result = $(ele).prop('checked');

      if (result) {
        selCount++;
      }
    });

    selCount >= 2 ? $('#delAll').css("visibility","visible") : $('#delAll').css("visibility","hidden");


    // 如果所有的多选框被选中，表头中的多框也要被选中
    let totalCount = $('.boxitem').length;

    // 如果所有多选框的数据与选中的数据是相同的，则表头中的多选框也要选中
    totalCount === selCount ?
      $('#selAll').prop('checked', true) :
      $('#selAll').prop('checked', false);
  });

  // 给批量删除绑定一个点击事件
  $('#delAll').click(function () {
    // 得到选中多选框数据的 id
    // serialize: 获取当前表单元素中的所有内容，并且接收成为字符串
    let params = $('#tableForm').serialize();

    console.log(params);

    // 将得到的 id 提交到服务器中
    $.ajax({
      url: '/delUsersByIds',
      type: 'POST',
      data: params,
      success: res => {
        let {
          status,
          msg
        } = res;

        if (status === 200) {
          alert(msg);
          // 重新渲染
          getAllUsers();

          window.location.reload();//刷新当前页面
        } else {
          alert('出错啦');
        }
      }
    })
  })
</script>